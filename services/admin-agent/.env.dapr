# Dapr Environment Configuration for Admin Agent

# Application Settings
APP_NAME=admin-agent
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Settings (Neon PostgreSQL)
DATABASE_URL=postgresql+asyncpg://username:password@host:5432/compliance_sentinel
DATABASE_NAME=compliance_sentinel

# Dapr Settings
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001
DAPR_HOST=localhost

# Dapr Component Names
DAPR_STATE_STORE=statestore
DAPR_PUBSUB=pubsub
DAPR_WORKFLOW=workflow
DAPR_SECRETS=secrets

# Redis Settings (for Pub/Sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Tracing Settings
ZIPKIN_ENDPOINT=http://localhost:9411/api/v2/spans

# CORS Settings
ALLOWED_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Workflow Settings
WORKFLOW_TIMEOUT=300

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_PROFILING=true
